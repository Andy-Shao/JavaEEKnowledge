<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>MyWebApp</display-name>
	<welcome-file-list>
		<welcome-file>faces/index.xhtml</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	
	<!-- web services START -->
	<listener>
	   <listener-class>andy.shao.web.services.HelloWorldWebServiceListener</listener-class>
	</listener>
	<!-- web services STOP -->

    <!-- faces START -->
    <!-- <context-param>  
    <param-name>javax.faces.CONFIG_FILES</param-name>  
    <param-value>/WEB-INF/faces-config.xml</param-value>  
    </context-param> -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>/faces/*</url-pattern>
	</servlet-mapping>
	<!-- faces END -->
	
	<!-- restful web services START-->
	<servlet>
     <servlet-name>My JAX-RS Resource</servlet-name>
     <servlet-class>
         com.sun.jersey.spi.container.servlet.ServletContainer
     </servlet-class>
            <init-param>
                    <param-name>
                            com.sun.jersey.config.property.packages
                    </param-name>
                    <param-value>
                            oralce.offical.javaee.web.services.resouces
                    </param-value>
            </init-param>
            <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
     <servlet-name>My JAX-RS Resource</servlet-name>
         <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <!-- restful web services END -->

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>